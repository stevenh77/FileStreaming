<UserControl x:Class="FileStreaming.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="600">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Margin="50">
            <TextBlock Text="Click to download report" Margin="20" FontSize="48" FontFamily="Segoe UI Light" />
            <Button x:Name="btnReport1" Click="btnReport1_Click" Content="report1.xlsx" Height="70" Margin="20"/>
            <Button x:Name="btnReport2" Click="btnReport2_Click" Content="report2.docx" Height="70" Margin="20" />
            <Button x:Name="btnReport3" Click="btnReport3_Click" Content="report3.pdf" Height="70" Margin="20" />
        </StackPanel>
    </Grid>
</UserControl>